@page "/"
@using Volo.Abp.MultiTenancy
@using TetstEH.Books

@inherits TetstEHComponentBase
@inject ICurrentTenant CurrentTenant
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IBookAppService BookAppService


<div class="container">
    <div class="p-5 text-center">
        <Badge Color="Color.Success" class="mb-4">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Congratulations, <strong>TetstEH</strong> is successfully running!</h5>
        </Badge>

        <h1>Welcome to the Application</h1>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a class="btn btn-primary" href="Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }
    </div>

    <div class="my-3 text-center">
        <h3>Buttons Test</h3>
        <Button Color="Color.Primary" Clicked="CreateBook">Crear Book</Button>
        <br />
        <br />
        <Button Color="Color.Primary" Clicked="UpdateBook">Update First Book</Button>
        <br />
        <br />
        <p>
            After clicking the button, check the AbpEntityChanges table, you will see that the history of the entities is not being recorded correctly.
        </p>
    </div>

</div>
